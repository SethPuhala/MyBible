<Grid>

	book: bo
	verse: ve





	GridLayout:
		cols:1
		size: root.width, root.height


		GridLayout:
			cols:2
			Label:
				text: "BOOK"

			TextInput:
				id: bo
				multiline: False

			Label:
				text: "chapter:verse"

			TextInput:
				id: ve
				multiline: False

		Button:
			text: "submit"
			on_press: root.submit()
			